<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.skku.sosil3.sky.telepathy.RegisterActivity" >

    <LinearLayout
        android:id="@+id/register_layout1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >
        
    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:text="ID"
        android:gravity="center" />
    
    <EditText
        android:id="@+id/register_id"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:inputType="textVisiblePassword"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/register_layout2"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_layout1"
        android:layout_marginTop="10dp"
        >
        
    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:text="PW"
        android:gravity="center" />
    
    <EditText
        android:id="@+id/register_pw"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:inputType="textPassword" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/register_layout3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_layout2"
        android:layout_marginTop="10dp" >
        
    <TextView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="재입력"
        android:gravity="center" />
    
    <EditText
        android:id="@+id/register_repw"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:inputType="textPassword" />
    
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/register_layout4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_layout3"
        android:layout_marginTop="10dp" >
        
    <TextView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="닉네임"
        android:gravity="center" />
    
    <EditText
        android:id="@+id/register_nickname"
        android:layout_width="130dp"
        android:layout_height="50dp" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp" >
        
    <Button
        android:onClick="onRegisterEnd"
        android:text="회원가입"
        android:layout_width="100dp"
        android:layout_height="40dp"
        />
        
    <Button
        android:onClick="onRegisterCancel"
        android:text="취소"
        android:layout_width="100dp"
        android:layout_height="40dp"
        />
    
    </LinearLayout>

</RelativeLayout>
